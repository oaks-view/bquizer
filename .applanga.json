{
  "app": {
    "base_language": "en",
    "push": {
      "source": [
        {
          "path": "./package.json",
          "file_format": "nested_json",
          "tag": "app:language.json",
          "language": "en"
        },
        {
          "exclude_languages": [
            "en"
          ],
          "language": "en-AU",
          "file_format": "nested_json",
          "path": "./en-AU.json",
          "tag": ["app:language.json", "loading"]
        }
      ]
    },
    "pull": {
      "target": [
        {
          "path": "./<language>.json",
          "file_format": "nested_json",
          "tag": "app:language.json",
          "exclude_languages": [
            "en"
          ]
        }
      ]
    }
  }
}
