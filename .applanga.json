{
  "app": {
    "base_language": "en",
    "push": {
      "source": [
        {
          "path": "./app.json",
          "file_format": "i18next_json",
          "tag": "app:translations.json",
          "language": "en"
        }
      ]
    },
    "pull": {
      "target": [
        {
          "path": "./<language>.json",
          "file_format": "i18next_json",
          "tag": "app:translations.json",
          "exclude_languages": [
            "en"
          ]
        }
      ]
    }
  }
}