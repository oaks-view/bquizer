{
  "app": {
    "base_language": "en",
    "push": {
      "source": [
        {
          "path": "./localization/en/common.xliff",
          "file_format": "xliff",
          "tag": "app:language.xliff",
          "language": "en"
        }
      ]
    },
    "pull": {
      "target": [
        {
          "path": "./localization/en/<language>.xliff",
          "file_format": "xliff",
          "tag": "app:language.xliff",
          "exclude_languages": [
            "en"
          ]
        }
      ]
    }
  }
}