{
  "app": {
    "base_language": "en",
    "push": {
      "source": [
        {
          "path": "./i18n/en/translations.xlsx",
          "file_format": "xls",
          "tag": "app:language.xls",
          "columnDescription": {
            "KEY": 0,
            "en": 1
          },
          "excludeHeaderRow": true,
          "language": "en"
        }
      ]
    },
    "pull": {
      "target": [
        {
          "path": "./i18n/<language>/translations.xlsx",
          "file_format": "xls",
          "tag": "app:language.xls",
          "excludeHeaderRow": true,
          "excludeBaseLang": true,
          "columnDescription": {
            "KEY": 0,
            "<language>": 1
          },
          "exclude_languages": [
            "en"
          ]
        }
      ]
    }
  }
}